@model Post

@{
    ViewData["Title"] = "Delete Post";
}

<h2>@ViewData["Title"]</h2>

<h4> Do you want to delete this post? </h4>

<form asp-controller="Post" asp-action="DeleteConfirm" >
    <input asp-for="@Model.Id" hidden />
    <button type="submit" class="btn btn-danger mt-2"> <i class="bi bi-trash"></i> Delete</button>
    <a asp-action="Index" asp-controller="Post" class="btn btn-secondary"> Cancel</a>
</form>